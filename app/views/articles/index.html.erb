<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<table>
  <thead>
    <tr>
      <th>Article title</th>
      <th>Article profile</th>
      <th>Article pv</th>
      <th>Article readable</th>
      <th>Article benefit</th>
      <th>User</th>
      <th>Pickup flag</th>
      <th>Article delete flag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.article_title %></td>
        <td><%= article.article_profile %></td>
        <td><%= article.article_pv %></td>
        <td><%= article.article_readable %></td>
        <td><%= article.article_benefit %></td>
        <td><%= article.user_id %></td>
        <td><%= article.pickup_flag %></td>
        <td><%= article.article_delete_flag %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

